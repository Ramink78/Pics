<resources>
    <!-- Base application theme. -->
    <style name="PicsTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimarySurface">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="materialCardViewStyle">@style/MycardStyle</item>
        <item name="bottomNavigationStyle">@style/MyBottomNavStyle</item>
        <item name="MyChipStyle">@style/ChipsStyle</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/shared_element_transition</item>
        <item name="android:windowSharedElementExitTransition">@transition/shared_element_transition</item>
    </style>

    <style name="MycardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/CardsShape</item>
        <item name="materialThemeOverlay">@style/CardsTheme</item>

    </style>

    <style name="CardsShape" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>
    </style>
    <style name="layoutshape" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>
    </style>

    <style name="CardsTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSurface">@color/cardBackground</item>
        <item name="colorOnSurface">@color/design_default_color_primary</item>
    </style>

    <style name="CircleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="CollectionPhotos" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>fraction
        <item name="cornerSizeTopLeft">21dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Card.Feed" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Header.Image" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>

    </style>

    <style name="ShapeAppearanceOverlay.App.Card.Explore" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="FooterPrimaryTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/cardFooterPrimeryTextColor</item>
    </style>
    <style name="FooterSeconderyTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">8dp</item>
        <item name="android:textColor">@color/cardFooterSeconderyTextColor</item>
    </style>

    <style name="MyBottomNavStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/BottomNavTheme</item>

    </style>

    <style name="BottomNavTheme" parent="">
        <item name="colorPrimary">@color/black</item>

    </style>


    <style name="ChipsStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:backgroundTint">@color/chips_color</item>
        <item name="android:textColor">@color/chips_text_color</item>
    </style>
    
    
    <!-- 
   /// change styles
    !-->
    <style name="PicsBottomNav" parent="Widget.MaterialComponents.BottomNavigationView.PrimarySurface">
    </style>


</resources>